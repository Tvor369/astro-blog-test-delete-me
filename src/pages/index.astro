---
const clientName = 'Polytechnic Pals';
// const currentYear = new Date().getFullYear();
const currentYear = new Date();

const user = {
    name : 'Victor E. Eagle',
    age : 100,
}

const emojiSet = ['🍔', '🌭', '🍟', '🍕'];

import BaseLayout from "../layouts/BaseLayout.astro";
import "../styles/mainStylesheet.css";
import Nav from "../components/Nav.astro";
import Footer from "../components/Footer.astro";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{clientName}</title>

		<BaseLayout>
			<h1>Homepage</h1>
		</BaseLayout>

	</head>
	<body>
		<a href="/">Home</a>
		<a href="/about/">About</a>

		<h1>{clientName}</h1>

		<p>Welcome to {clientName}! We are a group of students who are passionate about technology and education. We are here to help you learn more about technology and how it can be used to improve your life.</p>

		<p>The mascot is {user.name} and is {user.age}</p>

		<p>{user.name} loves food. His favorites are:</p>

		<ul>
			{emojiSet.map((emoji) => (
				<li>{emoji}</li>
			))}
		</ul>
		
		<footer>
			<p>&copy; {currentYear.getFullYear()} {clientName}</p>
		</footer>

	</body>
</html>
